<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".fragment_menu.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Sapaan -->
        <TextView
            android:id="@+id/tvHallo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hallo Rania ðŸ‘‹"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33 hari lagi bayi anda lahir ðŸŽ‰"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <!-- Info usia -->
        <TextView
            android:id="@+id/tvUsia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFF3F3"
            android:text="Usia : 35 Minggu 12 hari - Trimester Ketiga"
            android:textColor="#E91E63"
            android:layout_marginBottom="12dp" />

        <!-- Gambar Janin -->
        <ImageView
            android:id="@+id/imgJanin"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_panel_bg"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Nutrisi -->
        <TextView
            android:id="@+id/tvNutrisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beri nutrisi si kecil yuk bun."
            android:background="#F7F7F7"
            android:padding="12dp"
            android:gravity="center"
            android:textColor="#444444"
            android:layout_marginBottom="16dp" />

        <!-- Baca Artikel -->
        <TextView
            android:id="@+id/tvArtikelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baca Artikel"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- RecyclerView Artikel -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

    </LinearLayout>
</ScrollView>

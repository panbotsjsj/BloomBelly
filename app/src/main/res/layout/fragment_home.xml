<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".fragment_menu.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="24dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_greeting_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hallo Rania"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/hand_emoji"
                    android:contentDescription="Emoji Tangan Melambai" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tv_days_to_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33 hari lagi bayi anda lahir"
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/party_popper_emoji"
                    android:contentDescription="Emoji Konfeti" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_pregnancy_age_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usia : 35 Minggu 12 hari"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E91E63" />

                    <TextView
                        android:id="@+id/tv_trimester"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trimester Ketiga"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E91E63" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Perkembangan"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/img_fetus_illustration"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/week_by_week_pregnancy"
                android:contentDescription="Ilustrasi Perkembangan Janin"
                android:background="@drawable/background_rounded"
                android:clipToOutline="true"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/full_glass_of_milk_on_a_white_background"
                        android:contentDescription="Ikon Gelas Susu"
                        />

                    <TextView
                        android:id="@+id/tv_nutrition_reminder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Beri nutrisi si kecil yuk bun."
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baca Artikel"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_popular_articles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:paddingStart="24dp"
                android:paddingEnd="16dp"
                tools:listitem="@layout/item_article_card" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
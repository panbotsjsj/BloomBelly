<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bloombelly">

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:noHistory="true"> <!-- noHistory=true agar tidak kembali ke splash screen -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity untuk Login/Register. Sekarang dipanggil dari SplashActivity -->
        <activity
            android:name=".AuthActivity"
            android:exported="false" />

        <!-- Activity utama setelah login -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

    </application>

</manifest>
